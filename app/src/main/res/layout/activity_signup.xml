<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="horizontal"
    tools:context=".SignupActivity">

    <ImageView
        android:id="@+id/signUpLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:src="@drawable/logo2"
        app:layout_constraintBottom_toTopOf="@id/signUPHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signUPHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:fontFamily="@font/electrolize"
        android:gravity="center_horizontal"
        android:text="Expenses Tracker"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUpLogo" />


    <LinearLayout
        android:id="@+id/signUpForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/signUPHeader">


        <EditText
            android:id="@+id/registerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/electrolize"
            android:hint="Enter Name"
            android:paddingHorizontal="10dp"
            android:paddingVertical="20dp"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/registerEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/electrolize"
            android:hint="Enter Email"
            android:paddingHorizontal="10dp"
            android:paddingVertical="20dp"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/registerPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/electrolize"
            android:hint="Enter Password"
            android:paddingHorizontal="10dp"
            android:paddingVertical="20dp"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/registerConfirmPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/electrolize"
            android:hint="Enter Confirm-Password"
            android:paddingHorizontal="10dp"
            android:paddingVertical="20dp"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@drawable/btn_bg2"
            android:clickable="true"
            android:fontFamily="@font/electrolize"
            android:gravity="center"
            android:paddingVertical="20dp"
            android:text="Register"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/electrolize"
            android:gravity="center"
            android:text="Already have an account ?"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/redirectLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/electrolize"
            android:gravity="center"
            android:text="Login"
            android:textColor="#FB0101"
            android:textSize="22dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="5dp"
            android:background="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/electrolize"
            android:text="Sign up with"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnRegisterGoogle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:layout_weight="1"
                android:elevation="2dp"
                android:src="@drawable/google" />

            <ImageView
                android:id="@+id/btnRegisterFacebook"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:elevation="2dp"
                android:src="@drawable/facebook" />

            <ImageView
                android:id="@+id/btnRegisterPhone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:elevation="2dp"
                android:src="@drawable/phone" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:elevation="2dp"
                />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>